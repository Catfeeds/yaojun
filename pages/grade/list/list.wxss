/* pages/grade/list/list.wxss */
.grade_list {
  font-size: 35rpx;
  padding: 30rpx 30rpx;
}

.grade_list .part {
  display: flex;
  align-items: stretch;
  padding: 20rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #666;
  box-shadow: 5rpx 5rpx 5rpx #f2f2f2;
  border-radius: 10rpx;
  margin: 30rpx 0;
}

.part image {
  display: block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.part .text {
  width: 70%;
  position: relative;
}

.title {
  font-size: 35rpx;
  color: #333;
  font-weight: bold;
}

.text .count {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding-top: 10rpx;
  border-top: solid 1rpx #f2f2f2;
}

.count .sign {
  color: #4E96D9;
  float: right;
}

.onerow {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 2rpx #eee;
}
