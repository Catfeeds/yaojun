/* pages/member/appointment/appointment.wxss */

.appointment {
  font-size: 35rpx;
}

.appointment .titlebar {
  padding: 20rpx;
  border-bottom: #f2f2f2 solid 1rpx;
}

.appointment .appointment-list {
  padding: 20rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: #666;
}

.appointment-list .title {
  color: #333;
  font-size: 35rpx;
}

.appointment-list image {
  width: 200rpx;
  height: 180rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
}

.oneline {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.flex-stretch {
  display: flex;
  align-items: stretch;
  border-bottom: solid #f2f2f2 1rpx;
  padding: 20rpx 0;
}

.flex-1 {
  flex: 1;
  width: 10%;
}

.relative {
  position: relative;
}

.relative .absolute-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}
