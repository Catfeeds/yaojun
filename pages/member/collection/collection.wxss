/* pages/member/collection/collection.wxss */

.collection {
  font-size: 35rpx;
}

.collection  .header-nav {
  display: flex;
  width: 100%;
  align-items: stretch;
  border-top: solid #f2f2f2 1rpx;
}

.part {
  flex: 1;
  text-align: center;
  padding: 20rpx;
}

.collection .collection-list {
  padding: 20rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: #666;
}

.collection-list .title {
  color: #333;
  font-size: 35rpx;
}

.collection-list image {
  width: 240rpx;
  height: 160rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
}

.oneline {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.flex-stretch {
  display: flex;
  align-items: stretch;
  border-bottom: solid #f2f2f2 1rpx;
  padding: 20rpx 0;
}

.box-shadow {
  box-shadow: 0 3rpx 3rpx #f2f2f2;
  padding: 20rpx 20rpx;
  border: solid #f2f2f2 1rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  border-top: none;
}

.flex-1 {
  flex: 1;
  width: 10%;
}

.relative {
  position: relative;
}

.relative .absolute-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}
