/* pages/member/logs/logs.wxss */

.notes {
  font-size: 35rpx;
}

.header-nav {
  display: flex;
  width: 100%;
  align-items: stretch;
  border-top: solid #f2f2f2 1rpx;
}

.part {
  flex: 1;
  text-align: center;
  padding: 20rpx;
}

.flex-1 {
  flex: 1;
  margin-left: 10rpx;
}

.content-list {
}

.content-list .reply {
  font-size: 30rpx;
  color: #666;
  padding: 30rpx;
  border-bottom: solid 8rpx #f2f2f2;
}

.reply .replyuser {
  color: #999;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.replyuser image {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 50%;
}

.reply .content {
  color: #333;
  font-size: 35rpx;
  /* font-weight: bold; */
}

.content text{
  background: #72A9DD;
  color: white;
  font-size: 28rpx;
  padding: 1rpx 10rpx;
  border-radius: 8rpx;
}

.reply .from {
  padding: 20rpx 0 ;
}

.reply .mycomment {
  padding: 20rpx 0 0;
  border-top: solid 1rpx #f2f2f2;
}
.mycomment text{
  margin-right: 15rpx;
}

