/* pages/member/userinfo/userinfo.wxss */

.make-info {
  font-size: 35rpx;
}

.flex-centre {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: solid 1rpx #f2f2f2;
}

.flex-centre .flex-1 {
  flex: 1;
}

input {
  text-align: right;
}

.right-arrow {
  width: 30rpx;
  height: 30rpx;
  border-right: solid #d2d2d2 1rpx;
  border-top: solid #d2d2d2 1rpx;
  transform: rotate(45deg);
  margin-left: 20rpx;
}

.btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 0;
  font-size: 35rpx;
}
