/* pages/rubclass/index/index.wxss */

.rubclass_list {
  font-size: 30rpx;
}

.rubclass_list .header {
}

.header .search {
  background: #f2f2f2;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  width: 85%;
  margin: auto;
  display: flex;
  align-items: center;
}

.search input {
  width: 95%;
  margin-left: 20rpx;
}

.header .type {
  padding: 20rpx 40rpx;
}

.type text {
  padding: 5rpx 20rpx;
  margin-right: 40rpx;
  border-radius: 10rpx;
}

.rubclass_list .content {
  padding: 20rpx;
  border-top: solid 1rpx #f3f3f3;
}

.content .op {
  display: inline-block;
  width: 46%;
  padding: 2%;
  vertical-align: top;
  font-size: 30rpx;
}

.op .btn {
  color: white;
  background: #4E96D9;
  padding: 0 30rpx;
  float: right;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.onerow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 50rpx;
}
